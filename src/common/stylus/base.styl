.mt-range-thumb {
  top: 7px;
  width: 15px;
  height: 15px;
  background-color #ff4c4c
}
.mt-range-runway{
  right -15px
}
.mt-range-progress{
  background-color #ff4c4c
}

//打钩
.mint-checkbox-label
  margin-left 0
.mint-checkbox-core::after
  width 5px
  height 9px
//单选
.mint-radio-input:checked + .mint-radio-core
  background-color #ff4c4c
  border-color #ff4c4c
//switch
.mint-switch-core::before
  width: 17px;
  height: 17px;
.mint-switch-core::after
  width: 17px;
  height: 17px;
.mint-switch-core
  width: 37px;
  height: 19px;
.mint-switch-input:checked + .mint-switch-core
  border-color: #ff4c4c;
  background-color: #ff4c4c;

//input 单独一行设置
  .inputall
    width 90%
    height 42px
    color white
    display block
    background #ff4c4c
    border-radius 4px

//navbar 样式修改
.mint-navbar .mint-tab-item.is-selected
  border-bottom: 3px solid #ff4c4c;
  color: #ff4c4c;
.mint-tab-item-label
  font-size 14px
.mint-navbar .mint-tab-item
  padding 14px 0
.mint-navbar
  box-shadow 0 2px 2px #bfbfbf

//生日
.mint-button--default
  color: black
  background-color: white
  box-shadow none
  padding 0
  width 90%
  margin 0 auto
.mint-button--normal
  width 90%
  margin 0 auto
