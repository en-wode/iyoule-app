body,html
  line-height:1
  font-weight 200
  font-family 'PingFang SC','STHeitiSC-Light','Helvetica-Light',arial,sans-serif
  height 100%

#app
  height 100%

.is-active
  color red
.fl
  float left

.fr
  float right
.tl
  text-align left
.tr
  text-align right

.red
  color:#ff4c4c
.clearfix
  display : inline-block
  &:after
    display block
    content :"."
    height 0
    line-height 0
    clear both
    visibility :hidden

.border_bottom
  border-bottom 8px solid #f5f0f0


.mint-checkbox-input:checked + .mint-checkbox-core
  background-color #ff4c4c
  border-color #ff4c4c

.wd9
  padding 0 20px

.contain
  width: 100%;
  overflow: hidden;
  position absolute
  top 55px
  margin-bottom: 48px;

.yiny
  box-shadow 3px 2px 2px #bfbfbf

.linh
  line-height 40px
  height 40px

.tc
  text-align center
@media (-webkit-min-device-pixel-ratio: 1.5),(min-device-pixel-ratio: 1.5)
  .border-1px
    &::after
      -webkit-transform: scaleY(0.7)
      transform: scaleY(0.7)

@media (-webkit-min-device-pixel-ratio: 2),(min-device-pixel-ratio: 2)
  .border-1px
    &::after
      -webkit-transform: scaleY(0.5)
      transform: scaleY(0.5)

//评论区css
.comment
  padding 10px 18px
  .kuai
    padding 10px 0
    p
      line-height 20px
      font-size 14px
    h2
      display inline-block
    a
      float right
      color #3b89ff
  .ev_comment
    border-bottom 1px solid #e4e3e3
    padding 15px 0
    .tx
      position absolute
      img
        border-radius 50%
    .user_new
      display: inline-block;
      padding-left:48px;
      height: 38px;
      font-size 16px
      color #b6a7a7
      .user_lv
        color #f68484
        border 1px solid #f68484
        border-radius 2px
        font-size 12px
        padding 0px 4px
    .comment_time
      color #b6a7a7
      font-size 14px
      i
        font-size 18px
        margin-right 18px
      span
        margin-left 4px
        font-size 14px
        vertical-align 3px
  .more
    text-align center
    color #3b89ff
    padding  22px 0 10px 0

//小组件样式修改
